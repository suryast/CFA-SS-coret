

      <h4><%= product.name %></small></h4>

      <%= form_for order_item, remote: true do |f| %>

      <h4>Unit Price: <span style="color: green"><%= number_to_currency product.price %></span></h4>

          <%= f.number_field :quantity, value: 1, class: "control", min: 1 %>

            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Add to Cart", class: "button is-primary" %>
      <% end %>
