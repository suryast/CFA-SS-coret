<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :creation %><br>
    please also select corresponding Creation Name
    <%= f.select :creation_id, Creation.all.collect { |p| [ p.id  ] }, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :product_type %><br>
    please also select corresponding Product Type
    <%= f.select :product_type_id, ProductType.all.collect { |p| [ p.id  ] }, include_blank: true %>
  </div>

  <div class="field">
    <p> Your current product image
      <br>
    <%= image_tag(product.image_url, size: "150") if product.image? %>
    </p>
    <br>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
