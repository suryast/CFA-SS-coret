<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Image</th>
      <th>Description</th>
      <th>In stock</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= image_tag product.image_url(:thumb), size: "50" %></td>
        <td><%= product.description %></td>
        <td><%= product.in_stock %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% if user_signed_in? %>
          <td><%= render "product_row", product: product, order_item: @order_item %></td>
        <% else %>
          <td><%= render "product_row_disabled", product: product, order_item: @order_item %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

