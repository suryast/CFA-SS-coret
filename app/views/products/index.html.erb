<p id="notice"><%= notice %></p>

<% 2.times do %>

<div class="container">
  <div class="columns is-multiline">
    <% @products.first(2).each do |product| %>
    <div class="column is-half">
      <div class="card" style="background-color: #C2185B;">
        <div class="card-image">
          <figure class="image">
            <%= image_tag product.image_url %>
          </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4" style="font-family:serif, color:#fff;"><%= product.name %></p>
            </div>
          </div>

          <div class="content" style="color:white;">
            <%= product.description %>
            <br>
          </div>
        </div>

        <footer class="card-footer">
          <p class="card-footer-item" style:"background-color:black">
            <span>
              $<%= product.price%>
            </span>
          </p>
          <a class="card-footer-item"></a>
          <p class="card-footer-item" style:"background-color:black">
            <span>
              <%= link_to 'Show Details', product, class:"button is-primary is-outlined is-inverted" %>
            </span>
          </p>
        </footer>

      </div>

    </div>
    <% end %>
  </div>
</div>

