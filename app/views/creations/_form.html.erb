
<%= form_for [@artist, @creation] do |f| %>
  <% if creation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(creation.errors.count, "error") %> prohibited this creation from being saved:</h2>

      <ul>
      <% creation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p> Your current artwork image
      <br>
    <%= image_tag(creation.artwork_image_url, size: "150") if creation.artwork_image? %>
    </p>
    <br>
    <%= f.label :artwork_image %>
    <%= f.file_field :artwork_image %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :type %>
    <%= f.text_field :creation_type %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
